<h1>Edit Kitten</h1>

<%= form_for @kitten do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.label :cuteness %>
    <%= f.number_field :cuteness %>

    <%= f.label :softness %>
    <%= f.number_field :softness %>

    <%= f.submit %>
<% end %>
<%= link_to "Delete", kitten_path(@kitten), method: :delete %>